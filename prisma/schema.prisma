generator client {
	provider        = "prisma-client-js"
	previewFeatures = ["fullTextSearch", "postgresqlExtensions"]
}

datasource db {
	provider          = "postgresql"
	url               = env("POSTGRES_PRISMA_URL")
	directUrl         = env("POSTGRES_URL_NON_POOLING")
	shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
	extensions        = [postgis]
}

